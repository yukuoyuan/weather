<!--index.wxml-->
<view class='weather-wrapper'>
  <view class='temp'>
    {{nowTemp}}
  </view>
  <view class='weather'>
    {{nowWeather}}
  </view>
  <image class='weather-bg' src='{{nowWeatherBackground}}' mode='scaleToFill'></image>
</view>
<view class='timetips'>
   <image class="timetips-icon" src="/images/time-icon.png"></image>
  <view class="timetips-text">未来24小时天气预测</view>
</view>